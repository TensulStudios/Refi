{
  "rewrites": [
    {
      "source": "/http/:path*",
      "destination": "/api/rep?url=http://:path*"
    },
    {
      "source": "/https/:path*",
      "destination": "/api/rep?url=https://:path*"
    },
    {
      "source": "/:domain.:tld/:path*",
      "destination": "/api/rep?url=https://:domain.:tld/:path*"
    },
    {
      "source": "/:domain.:tld",
      "destination": "/api/rep?url=https://:domain.:tld"
    }
  ],
  "functions": {
    "api/rep.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/api/rep",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, s-maxage=3600, stale-while-revalidate=86400"
        }
      ]
    }
  ]
}
